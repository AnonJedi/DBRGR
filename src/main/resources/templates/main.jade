doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', type='text/css', href='css/css.css')
    script(src='/js/jquery-1.11.3.js')
    script(src='/js/js.js')
    title DB interface
  body
    .content
      .header
        select.dropDown
          option(value='department') department
          option(value='chair') chair
          option(value='class') class 
          option(value='student') student
          option(value='course') course
          option(value='lecturer') lecturer
          option(value='student_course') student_course 
        #js-insertTab.tab.activeTab(name='Insert') Insert data
        #js-updateTab.tab.deactiveTab(name='Update') Update data
        #js-deleteTab.tab.deactiveTab(name='Delete') Delete data
      .activeSpace
        select(size=15, multiple='multiple').insertResult
          option name
          for d in departments
            option= d.name
        .control
          input(type='textbox', name='name', placeholder='name').inputTextbox
          input(type='hidden', name='firstname', placeholder='firstname').inputTextbox
          input(type='hidden', name='lastname', placeholder='lastname').inputTextbox
          select(name='isHead').insertDropdown.displayNone
            option(value='false') false
            option(value='true') true
          select(name='department').insertDropdown.displayNone
            for d in department
              option= d
          select(name='chair').insertDropdown.displayNone
            for ch in chair
              option= ch
          select(name='lecturer').insertDropdown.displayNone
            for l in lecturer
              option= l
          select(name='class').insertDropdown.displayNone
            for c in class
              option= c
          select(name='student').insertDropdown.displayNone
            for s in student
              option= s
          select(name='course').insertDropdown.displayNone
            for c in course 
              option= c
        .center
          button().actionBtn Insert